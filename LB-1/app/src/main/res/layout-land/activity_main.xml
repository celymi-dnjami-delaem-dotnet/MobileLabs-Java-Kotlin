<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:textSize="25sp"
                android:text="Калькулятор расчета суточной норм калорий"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:textStyle="italic"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
        />
        <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:text="Пол:"
                android:textSize="19sp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/sexTextView"
        />
        <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/sex"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/sexTextView"
                android:layout_alignBaseline="@+id/sexTextView"
                android:baselineAlignedChildIndex="0"
                android:baselineAligned="true"
                android:layout_marginLeft="20dp"
        >
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="мужской"
                    android:textSize="15sp"
                    android:id="@+id/man"
                    android:buttonTint="@color/colorPrimary"
            />
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="женский"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/woman"
                    android:buttonTint="@color/colorPrimary"
            />
        </RadioGroup>

        <TextView
                android:layout_marginLeft="10dp"
                android:text="Возраст:"
                android:textSize="19sp"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignTop="@+id/sexTextView"
                android:layout_marginTop="60dp"
                android:id="@+id/ageTextView"
        />
        <EditText
                android:id="@+id/age"
                android:inputType="number"
                android:layout_width="50sp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/ageTextView"
                android:layout_toRightOf="@+id/ageTextView"
                android:layout_marginLeft="10dp"
        />

        <TextView
                android:layout_marginLeft="50dp"
                android:text="Рост:"
                android:textSize="19sp"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/heightTextView"
                android:layout_toRightOf="@+id/age"
                android:layout_alignBaseline="@+id/age"
        />
        <EditText
                android:layout_marginTop="12dp"
                android:id="@+id/height"
                android:inputType="number"
                android:hint="см"
                android:layout_width="50sp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/heightTextView"
                android:layout_toRightOf="@+id/heightTextView"
                android:layout_marginLeft="20dp"
        />

        <TextView
                android:text="Вес:"
                android:textSize="19sp"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/height"
                android:layout_alignBaseline="@+id/height"
                android:layout_marginLeft="50dp"
                android:id="@+id/weightTextView"
        />
        <EditText
                android:id="@+id/weight"
                android:inputType="number"
                android:hint="кг"
                android:layout_width="50sp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/weightTextView"
                android:layout_alignBaseline="@+id/weightTextView"
                android:layout_marginLeft="20dp"
        />

        <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="10dp"
                android:text="Образ жизни:"
                android:textSize="19sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignTop="@+id/ageTextView"
                android:id="@+id/lifestyleTextView"
        />
        <Spinner
                android:layout_marginTop="30dp"
                android:entries="@array/lifeStyles"
                android:id="@+id/lifestyle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/lifestyleTextView"
                android:layout_toRightOf="@+id/lifestyleTextView"

        />

        <Button
                android:id="@+id/count"
                android:text="Вычислить"
                android:layout_width="120dp"
                android:onClick="getDailyCalories"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
        />
        <TextView
                android:id="@+id/result"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_above="@+id/count"
                android:layout_centerHorizontal="true"
                android:paddingBottom="20dp"
        />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>