<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContactCreation">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/contactCreationLabel"
                android:textSize="35sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:id="@+id/mainLabel"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainLabel"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="10dp"
                android:text="Name:"
                android:textSize="25sp"
                android:id="@+id/nameTextView"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/nameTextView"
                android:layout_toRightOf="@+id/nameTextView"
                android:width="150dp"
                android:id="@+id/nameEditText"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTextView"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/nameEditText"
                android:layout_alignBaseline="@+id/nameTextView"
                android:text="Phone:"
                android:textSize="25sp"
                android:id="@+id/phoneTextView"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/locationEditText"
                android:layout_alignBaseline="@+id/phoneTextView"
                android:width="150dp"
                android:id="@+id/phoneEditText"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneTextView"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_alignLeft="@+id/nameTextView"
                android:text="Email:"
                android:textSize="25sp"
                android:id="@+id/emailTextView"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nameEditText"
                android:layout_alignBaseline="@+id/emailTextView"
                android:width="150dp"
                android:id="@+id/emailEditText"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailTextView"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/emailEditText"
                android:text="Location:"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@+id/emailTextView"
                android:textSize="25sp"
                android:id="@+id/locationTextView"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/locationTextView"
                android:layout_alignBaseline="@+id/locationTextView"
                android:width="150dp"
                android:id="@+id/locationEditText"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailTextView"
                android:layout_marginTop="30dp"
                android:layout_alignLeft="@+id/nameTextView"
                android:text="Social Network:"
                android:textSize="25sp"
                android:id="@+id/socialNetworkTextView"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/socialNetworkTextView"
                android:layout_alignBaseline="@+id/socialNetworkTextView"
                android:layout_marginLeft="10dp"
                android:width="150dp"
                android:hint="id"
                android:id="@+id/socialNetworkEditText"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/socialNetworkEditText"
                android:layout_alignLeft="@+id/socialNetworkEditText"
                android:text="@string/vkLink"
                android:layout_marginLeft="30dp"
                android:id="@+id/vkLink"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="@string/createContactLabel"
                android:onClick="createContact"
                android:width="150dp"
                android:height="60dp"
        />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>