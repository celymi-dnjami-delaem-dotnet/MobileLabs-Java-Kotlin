<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContactInfo"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="35sp"
                android:layout_marginTop="30dp"
                android:text="@string/viewContactLabel"
                android:textStyle="bold"
                android:id="@+id/mainLabel"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainLabel"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:text="Name:"
                android:id="@+id/nameTextView"
                android:paddingLeft="50dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nameTextView"
                android:layout_alignBaseline="@+id/nameTextView"
                android:textSize="25sp"
                android:id="@+id/name"
                android:paddingLeft="10dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTextView"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:text="Email:"
                android:id="@+id/emailTextView"
                android:paddingLeft="50dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/emailTextView"
                android:layout_alignBaseline="@+id/emailTextView"
                android:textSize="25sp"
                android:id="@+id/email"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:textColor="@color/links"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailTextView"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:text="Phone:"
                android:id="@+id/phoneTextView"
                android:paddingLeft="50dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/phoneTextView"
                android:layout_alignBaseline="@+id/phoneTextView"
                android:textSize="25sp"
                android:id="@+id/phone"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:textColor="@color/links"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneTextView"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:text="Location:"
                android:id="@+id/locationTextView"
                android:paddingLeft="50dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/locationTextView"
                android:layout_alignBaseline="@+id/locationTextView"
                android:textSize="25sp"
                android:id="@+id/location"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:textColor="@color/links"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationTextView"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:text="Name:"
                android:id="@+id/socialNetworkTextView"
                android:paddingLeft="50dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/socialNetworkTextView"
                android:layout_alignBaseline="@+id/socialNetworkTextView"
                android:textSize="25sp"
                android:id="@+id/socialNetwork"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:textColor="@color/links"
        />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>