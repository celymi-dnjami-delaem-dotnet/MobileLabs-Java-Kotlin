<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContactUpdate">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Update contact"
                android:textStyle="bold"
                android:id="@+id/mainLabel"
                android:textSize="35sp"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameEditText"
                android:layout_below="@+id/mainLabel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:width="250dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_below="@+id/nameEditText"
                android:layout_centerHorizontal="true"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneEditText"
                android:layout_below="@+id/nameEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:width="250dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:layout_below="@+id/phoneEditText"
                android:layout_centerHorizontal="true"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailEditText"
                android:layout_below="@+id/phoneEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:width="250dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_below="@+id/emailEditText"
                android:layout_centerHorizontal="true"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locationEditText"
                android:layout_below="@+id/emailEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:width="250dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_below="@+id/locationEditText"
                android:layout_centerHorizontal="true"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vkEditText"
                android:layout_below="@+id/locationEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:width="250dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Network ID"
                android:layout_below="@+id/vkEditText"
                android:layout_centerHorizontal="true"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:onClick="updateContact"
        />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>