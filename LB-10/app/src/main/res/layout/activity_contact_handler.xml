<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContactHandler">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"
                android:width="250dp"
                android:id="@+id/nameEditText"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/nameEditText"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                android:id="@+id/nameTextView"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameEditText"
                android:layout_centerHorizontal="true"
                android:text="Name"
                android:textSize="16sp"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/nameEditText"
                android:layout_centerHorizontal="true"
                android:width="250dp"
                android:id="@+id/phoneEditText"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/phoneEditText"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                android:id="@+id/phoneTextView"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneEditText"
                android:layout_centerHorizontal="true"
                android:text="Phone"
                android:textSize="16sp"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/phoneEditText"
                android:layout_centerHorizontal="true"
                android:width="250dp"
                android:id="@+id/locationEditText"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/locationEditText"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                android:id="@+id/locationTextView"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationEditText"
                android:layout_centerHorizontal="true"
                android:text="Location"
                android:textSize="16sp"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/locationEditText"
                android:layout_marginTop="70dp"
                android:width="150dp"
                android:id="@+id/handleContactButton"
                android:onClick="handleContact"
        />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>